{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "sourceMap": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "strict": true,
    "outDir": "dist",
    "declaration": true,
  },
  "include": ["lib/**/*.ts", "lib/**/*.tsx", "lib/**/*.vue"],
  "exclude": ["**/*.spec.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
